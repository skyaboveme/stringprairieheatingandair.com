	}

	.btn-outline-blue:hover {
		background: var(--primary-blue);
		color: white;
		transform: translateY(-3px);
		box-shadow: 0 6px 16px rgba(41, 94, 147, 0.3);
	}

	@media (max-width: 768px) {
		.hero {
			padding: 4rem 0 10rem;
		}

		.hero-content h1 {
			font-size: 2rem;
		}

		.hero-subtitle {
			font-size: 1.15rem;
		}

		.features {
			margin-top: -6rem;
			padding: 3rem 0;
		}

		.feature-grid,
		.services-grid {
			grid-template-columns: 1fr;
		}

		.services-preview h2,
		.cta-section h2 {
			font-size: 2rem;
		}
	}
</style>
