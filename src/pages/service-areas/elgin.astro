<style>
	.page-header {
		background: linear-gradient(135deg, var(--dark-blue) 0%, var(--primary-blue) 100%);
		color: white;
		padding: 5rem 0;
		text-align: center;
		position: relative;
		overflow: hidden;
	}

	.page-header h1 {
		font-size: 3rem;
		margin-bottom: 1rem;
		font-weight: 800;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.page-header p {
		font-size: 1.35rem;
		opacity: 0.95;
		font-weight: 300;
	}

	.area-content {
		padding: 5rem 0;
	}

	.area-intro {
		max-width: 850px;
		margin: 0 auto 4rem;
		text-align: center;
	}

	.area-intro h2 {
		color: var(--dark-blue);
		font-size: 2.5rem;
		margin-bottom: 2rem;
		font-weight: 800;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.lead {
		font-size: 1.15rem;
		color: var(--text-dark);
		line-height: 1.8;
		font-weight: 300;
		margin-bottom: 1.5rem;
	}

	.services-overview {
		margin: 4rem 0;
	}

	.services-overview h2 {
		color: var(--dark-blue);
		font-size: 2.25rem;
		margin-bottom: 2.5rem;
		text-align: center;
		font-weight: 800;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.services-list {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}

	.service-item {
		background: var(--bg-light);
		padding: 2rem;
		border-radius: 12px;
		border-left: 5px solid var(--accent-red);
		transition: all 0.3s;
	}

	.service-item:hover {
		transform: translateY(-5px);
		box-shadow: 0 8px 25px rgba(41, 94, 147, 0.12);
		border-left-color: var(--primary-blue);
	}

	.service-item h3 {
		color: var(--primary-blue);
		margin-bottom: 1rem;
		font-size: 1.25rem;
		font-weight: 700;
	}

	.service-item p {
		color: var(--text-dark);
		line-height: 1.7;
		font-weight: 300;
	}

	.local-advantages {
		background: var(--bg-light);
		padding: 4rem 3rem;
		border-radius: 12px;
		margin: 4rem 0;
	}

	.local-advantages h2 {
		color: var(--dark-blue);
		font-size: 2.25rem;
		margin-bottom: 2rem;
		text-align: center;
		font-weight: 800;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.advantage-list {
		list-style: none;
		padding: 0;
		max-width: 750px;
		margin: 0 auto;
	}

	.advantage-list li {
		padding: 1rem 0 1rem 2.5rem;
		position: relative;
		color: var(--text-dark);
		font-weight: 300;
		font-size: 1.1rem;
		line-height: 1.7;
		border-bottom: 1px solid rgba(41, 94, 147, 0.1);
	}

	.advantage-list li:last-child {
		border-bottom: none;
	}

	.advantage-list li:before {
		content: "‚úì";
		position: absolute;
		left: 0;
		color: var(--accent-red);
		font-weight: bold;
		font-size: 1.5rem;
	}

	.map-section {
		margin: 4rem 0;
		padding: 4rem 3rem;
		background: var(--bg-light);
		border-radius: 12px;
	}

	.map-section h2 {
		color: var(--dark-blue);
		font-size: 2.25rem;
		margin-bottom: 1rem;
		text-align: center;
		font-weight: 800;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.map-subtitle {
		text-align: center;
		color: var(--text-light);
		font-size: 1.1rem;
		margin-bottom: 2.5rem;
		font-weight: 300;
	}

	.map-container {
		max-width: 1000px;
		margin: 0 auto;
		box-shadow: 0 8px 30px rgba(0,0,0,0.15);
		border-radius: 12px;
		overflow: hidden;
	}

	.testimonials-section {
		margin: 4rem 0;
	}

	.testimonials-section h2 {
		color: var(--dark-blue);
		font-size: 2.25rem;
		margin-bottom: 1rem;
		text-align: center;
		font-weight: 800;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.testimonials-subtitle {
		text-align: center;
		color: var(--text-light);
		font-size: 1.1rem;
		margin-bottom: 3rem;
		font-weight: 300;
	}

	.testimonials-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2.5rem;
		margin-bottom: 3rem;
	}

	.testimonial-card {
		background: white;
		padding: 2.5rem;
		border-radius: 12px;
		box-shadow: 0 4px 20px rgba(0,0,0,0.08);
		border-left: 5px solid var(--accent-red);
		transition: all 0.3s;
	}

	.testimonial-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 8px 30px rgba(41, 94, 147, 0.12);
		border-left-color: var(--primary-blue);
	}

	.stars {
		font-size: 1.25rem;
		margin-bottom: 1rem;
		letter-spacing: 2px;
	}

	.testimonial-text {
		color: var(--text-dark);
		line-height: 1.8;
		font-weight: 300;
		font-size: 1.05rem;
		margin-bottom: 1.5rem;
		font-style: italic;
	}

	.testimonial-author {
		color: var(--primary-blue);
		font-weight: 700;
		font-size: 0.95rem;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.review-cta {
		text-align: center;
	}

	.review-link {
		display: inline-block;
		padding: 1rem 2.5rem;
		background: linear-gradient(135deg, var(--primary-blue) 0%, var(--dark-blue) 100%);
		color: white;
		text-decoration: none;
		border-radius: 50px;
		font-weight: 700;
		font-size: 1rem;
		text-transform: uppercase;
		letter-spacing: 0.5px;
		transition: all 0.3s;
		box-shadow: 0 4px 12px rgba(41, 94, 147, 0.3);
	}

	.review-link:hover {
		transform: translateY(-3px);
		box-shadow: 0 6px 16px rgba(41, 94, 147, 0.4);
	}

	.cta-section-local {
		text-align: center;
		background: linear-gradient(135deg, var(--accent-red) 0%, var(--dark-red) 100%);
		color: white;
		padding: 4rem 3rem;
		border-radius: 12px;
	}

	.cta-section-local h2 {
		font-size: 2.25rem;
		margin-bottom: 1rem;
		font-weight: 800;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.cta-section-local p {
		font-size: 1.25rem;
		margin-bottom: 2rem;
		opacity: 0.95;
		font-weight: 300;
	}

	.cta-buttons {
		display: flex;
		gap: 1.5rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.btn {
		padding: 1.25rem 2.5rem;
		border-radius: 50px;
		text-decoration: none;
		font-weight: 700;
		transition: all 0.3s;
		display: inline-block;
		text-transform: uppercase;
		letter-spacing: 0.5px;
		font-size: 1rem;
	}

	.btn-primary {
		background: white;
		color: var(--accent-red);
		box-shadow: 0 4px 12px rgba(255, 255, 255, 0.3);
	}

	.btn-primary:hover {
		transform: translateY(-3px);
		box-shadow: 0 6px 16px rgba(255, 255, 255, 0.4);
	}

	.btn-secondary {
		background: transparent;
		color: white;
		border: 2px solid white;
		box-shadow: 0 4px 12px rgba(255, 255, 255, 0.2);
	}

	.btn-secondary:hover {
		background: white;
		color: var(--accent-red);
		transform: translateY(-3px);
	}

	@media (max-width: 768px) {
		.page-header h1 {
			font-size: 2rem;
		}

		.area-intro h2,
		.services-overview h2,
		.local-advantages h2,
		.map-section h2,
		.testimonials-section h2,
		.cta-section-local h2 {
			font-size: 1.75rem;
		}

		.services-list {
			grid-template-columns: 1fr;
		}

		.map-section {
			padding: 2.5rem 1.5rem;
		}

		.testimonials-grid {
			grid-template-columns: 1fr;
		}

		.cta-buttons {
			flex-direction: column;
		}
	}
</style>
