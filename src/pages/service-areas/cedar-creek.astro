		}

		.services-list {
			grid-template-columns: 1fr;
		}

		.map-section {
			padding: 2.5rem 1.5rem;
		}

		.testimonials-grid {
			grid-template-columns: 1fr;
		}

		.cta-buttons {
			flex-direction: column;
		}
