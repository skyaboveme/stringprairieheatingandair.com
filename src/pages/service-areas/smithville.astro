<style>
	.page-header {
		background: linear-gradient(135deg, var(--dark-blue) 0%, var(--primary-blue) 100%);
		color: white;
		padding: 5rem 0;
		text-align: center;
	}

	.page-header h1 {
		font-size: 3rem;
		margin-bottom: 1rem;
		font-weight: 800;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.page-header p {
		font-size: 1.35rem;
		opacity: 0.95;
		font-weight: 300;
	}

	.area-content {
		padding: 5rem 0;
	}

	.area-intro {
		max-width: 850px;
		margin: 0 auto 4rem;
		text-align: center;
	}

	.area-intro h2 {
		color: var(--dark-blue);
		font-size: 2.5rem;
		margin-bottom: 2rem;
		font-weight: 800;
		text-transform: uppercase;
	}

	.lead {
		font-size: 1.15rem;
		color: var(--text-dark);
		line-height: 1.8;
		font-weight: 300;
		margin-bottom: 1.5rem;
	}

	.services-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		margin: 4rem 0;
	}

	.service-box {
		background: var(--bg-light);
		padding: 2rem;
		border-radius: 12px;
		border-left: 5px solid var(--accent-red);
		transition: all 0.3s;
	}

	.service-box:hover {
		transform: translateY(-5px);
		box-shadow: 0 8px 25px rgba(41, 94, 147, 0.12);
	}

	.service-box h3 {
		color: var(--primary-blue);
		margin-bottom: 1rem;
		font-size: 1.25rem;
		font-weight: 700;
	}

	.service-box p {
		color: var(--text-dark);
		line-height: 1.7;
		font-weight: 300;
	}

	.cta-section-local {
		text-align: center;
		background: linear-gradient(135deg, var(--accent-red) 0%, var(--dark-red) 100%);
		color: white;
		padding: 4rem 3rem;
		border-radius: 12px;
	}

	.cta-section-local h2 {
		font-size: 2.25rem;
		margin-bottom: 1rem;
		font-weight: 800;
		text-transform: uppercase;
	}

	.cta-section-local p {
		font-size: 1.25rem;
		margin-bottom: 2rem;
		opacity: 0.95;
		font-weight: 300;
	}

	.cta-buttons {
		display: flex;
		gap: 1.5rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.btn {
		padding: 1.25rem 2.5rem;
		border-radius: 50px;
		text-decoration: none;
		font-weight: 700;
		transition: all 0.3s;
		display: inline-block;
		text-transform: uppercase;
		letter-spacing: 0.5px;
		font-size: 1rem;
	}

	.btn-primary {
		background: white;
		color: var(--accent-red);
		box-shadow: 0 4px 12px rgba(255, 255, 255, 0.3);
	}

	.btn-primary:hover {
		transform: translateY(-3px);
		box-shadow: 0 6px 16px rgba(255, 255, 255, 0.4);
	}

	.btn-secondary {
		background: transparent;
		color: white;
		border: 2px solid white;
	}

	.btn-secondary:hover {
		background: white;
		color: var(--accent-red);
		transform: translateY(-3px);
	}

	@media (max-width: 768px) {
		.page-header h1 {
			font-size: 2rem;
		}

		.services-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
